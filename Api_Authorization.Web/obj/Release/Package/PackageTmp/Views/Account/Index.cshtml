
@{
    ViewBag.Title = "Login";
}
<h2>User Login</h2>

<div class="row" ng-controller="userCtrl">
    <div class="col-sm-12">
        <form name="loginFrm" id="loginFrm" action="" novalidate>
            <div class="form-group">
                <label class="col-sm-2">LoginID</label>
                <input type="text" name="UserLogin" ng-model="userModel.LoginId" />
            </div>
            <div class="form-group">
                <label class="col-sm-2">Password</label>
                <input type="password" name="Password" ng-model="userModel.Password" />
            </div>
            <div class="form-group">
                <label class="col-sm-2"></label>
                <input type="button" ng-click="accountManager.login()" value="Login" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>


@section AngularScript{
    @*Controller*@
    <script src="~/ScriptsNg/Controller/UserController.js"></script>
    @*Services*@
    <script src="~/ScriptsNg/Services/CrudService.js"></script>
}